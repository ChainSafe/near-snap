{
  "name": "near-snap",
  "version": "0.1.0",
  "private": true,
  "description": "Metamask snap to interact with Near dapps.",
  "main": "build/index.js",
  "scripts": {
    "lint": "yarn run lint:types && yarn run lint:style",
    "lint:types": "tsc --noEmit --pretty",
    "lint:style": "eslint 'src/**/*.{js,ts,tsx}' --fix",
    "lint:fix": "yarn run lint --fix",
    "start": "yarn run build && yarn run serve",
    "prebuild": "rm -rf build && rm -rf dist",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "yarn run build:tsc && yarn run build:snap",
    "build:tsc": "tsc --pretty --project tsconfig.build.json",
    "build:snap": "mm-snap build --transpilationMode localAndDeps  --stripComments",
    "snapEval": "mm-snap eval",
    "watch": "concurrently  --raw --kill-others \"yarn run watch:tsc\" \"yarn run watch:snap\" \"yarn run serve\"",
    "watch:tsc": "yarn run build:tsc --watch",
    "watch:snap": "mm-snap watch --debug",
    "serve": "mm-snap serve",
    "test": "yarn run test:unit",
    "test:unit": "mocha --colors -r ts-node/register \"test/unit/**/*.test.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chainsafe/near-snap.git"
  },
  "keywords": [
    "near",
    "metamask",
    "snap",
    "plugin",
    "dapp",
    "wallet"
  ],
  "author": "ChainSafe <info@chainsafe.io>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/chainsafe/near-snap/issues"
  },
  "homepage": "https://github.com/chainsafe/near-snap#readme",
  "web3Wallet": {
    "bundle": {
      "local": "dist/bundle.js",
      "url": "http://localhost:8081/dist/bundle.js"
    },
    "initialPermissions": {
      "alert": {},
      "confirm": {},
      "getPluginState": {},
      "updatePluginState": {},
      "wallet_manageAssets": {}
    }
  },
  "devDependencies": {
    "@metamask/snaps-cli": "0.15.0",
    "@types/chai": "^4.2.10",
    "@types/mocha": "^7.0.2",
    "@types/sinon": "^7.5.2",
    "@types/sinon-chai": "^3.2.3",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "chai": "^4.2.0",
    "concurrently": "^5.1.0",
    "eslint": "^8.17.0",
    "mocha": "^7.1.1",
    "sinon": "^9.0.1",
    "sinon-chai": "^3.5.0",
    "strict-event-emitter-types": "^2.0.0",
    "ts-node": "^8.6.2",
    "typescript": "4.7.3"
  },
  "dependencies": {
    "@metamask/key-tree": "^4.0.0",
    "axios": "0.27.2",
    "deepmerge": "^4.2.2"
  }
}
